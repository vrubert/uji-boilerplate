Ext.define('{{applicationName}}.view.{{instanceName}}.Grid',
{
    extend : 'Ext.ux.uji.grid.Panel',

    alias : 'widget.{{instanceName}}Grid',

    store : Ext.create('Ext.ux.uji.data.Store',
    {
        model : '{{applicationName}}.model.{{modelName}}',
        url : '/{{applicationName}}/rest/{{#pluralize}}{{instanceName}}{{/pluralize}}'
    }),

    title : '{{modelName}}',

    columns : [
    {
        text : 'ID',
        dataIndex : 'id',
        hidden : true
    },
    {{#each properties}}
    {
        dataIndex : '{{this.name}}',
        text: '{{this.text}}',
        {{#if this.editable}}
        editor :
        {
            field :
            {
              allowBlank : {{#if this.required}}false{{else}}true{{/if}}
            }
        }
        {{/if}}
    },
    {{/each}}
  ]
});