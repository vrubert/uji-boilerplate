Ext.define('pho.view.{{instanceName}}.Grid',
{
    extend : 'Ext.ux.uji.grid.Panel',

    alias : 'widget.{{instanceName}}Grid',
    requires : [ 'pho.store.{{modelName}}' ],

    store :
    {
        type : '{{instanceName}}'
    },

    title : '{{modelName}}',

    columns : [
    {
        text : 'ID',
        dataIndex : 'id',
        hidden : true
    },
    {{#each properties}}
    {
        dataIndex : '{{this.name}}',
        text: '{{this.text}}',
        {{#if this.editable}}
        editor :
        {
            field :
            {
              allowBlank : {{#if this.required}}false{{else}}true{{/if}}
            }
        }
        {{/if}}
    },
    {{/each}}
  ]
});